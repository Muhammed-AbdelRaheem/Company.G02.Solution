@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthSingUpLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignUp">
            <div class="text center" asp-validation-summary="All"></div>
            <input class="text" asp-for="UserName" placeholder="Username" required="">
            <input class="text" asp-for="FirstName" placeholder="FirstName" required="">
            <input class="text" asp-for="LastName" placeholder="LastName" required="">
            <input class="text" asp-for="Email" placeholder="Email" required="">
            <input class="text" asp-for="Password" placeholder="Password" required="">
            <input class="text" asp-for="ConfirmPassword" placeholder="ConfirmPassword" required="">



      
            <div class="d-flex flex-row">

                <input asp-for="IsAgree" type="checkbox" class="checkbox" required="">
                <p>I Agree To The Terms & Conditions</p>

            </div>
           
            

            <button type="submit" value="SignUp">SignUp</button>

            <p>Do You have an Account? <a asp-action="SignIn"> Login Now!</a></p>
        </form>
    </div>
</div>

