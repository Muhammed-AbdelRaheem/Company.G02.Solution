@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
	Layout = "~/Views/Shared/_AuthForgetPasswordLayout.cshtml";
}





<div class="main-agileinfo">

	<div class="agileits-top">

		<div class="text-center" asp-validation-summary="All"></div>

		<form asp-action="SendResetPassword">
 
		

			<input class="text email" asp-for="Email" placeholder="Email" required="">

			<button type="submit" value="Reset Password">Reset Password By Email</button>

			<button asp-action="SendSms" type="submit" value="Reset Password">Reset Password By Sms</button>

		</form>






	</div>
</div>

